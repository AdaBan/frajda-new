<a class="visually-hidden" href="#main-content">Skip to content</a>
<header role="banner" class="site-head">
  <div class="container">
    <div class="site-head__inner">
      <a class="site-head__brand" href="/" aria-label="{{ site.name }} - home">
        <img class="site-head__brand-image" src="/assets/logo.svg" alt="Frajda Studio logotype">
      </a>
      <nav
        class="site-head__nav nav"
        aria-label="Primary navigaton"
      >
        <ul class="nav__list">
          {% for item in navigation.items %}
          <li class="nav__item">
            <a class="nav__link" href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>
              {{ item.text }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </nav>
      <strong class="site-head__availability">Available for work</strong>
    </div>
  </div>
</header>
